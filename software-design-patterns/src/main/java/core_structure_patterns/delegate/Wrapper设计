// 提供一个类型的包装器，对类型的接口进行统一管理
public class DbEngineWrapper() {

     private final DbEngine dbEngine;

     public DbEngineWrapper(DbEngine dbEngine) {
         this.dbEngine = dbEngine;
     }

     public DbEngine getDbEngine() {
         return this.dbEngine;
     }

     public void destroy() {
         this.dbEngine.close();
     }
}